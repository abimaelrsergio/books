<%- include("head.ejs")%>
<%- include('main.ejs')%>
    <div class="list-books">
      <div class="container px-4 py-5" id="hanging-icons">
        <h2 class="pb-2 border-bottom">Lista de livros</h2>
        <form action="/new" method="get">
          <button type="submit" class="btn btn-secondary">Novo livro</button>
        </form>
        <div class="row g-4 py-5 row-cols-1 row-cols-lg-3">
          <%if(locals.books) { %>
            <%for (let book of books) {%>
              <div class="col d-flex align-items-start">
                <div class="icon-square text-body-emphasis bg-body-secondary d-inline-flex align-items-center justify-content-center fs-4 flex-shrink-0 me-3">
                  <img src="data:image/jpg;base64,<%= book.image %>" alt="" >
                </div>
                <div>
                  <h3 class="fs-2 text-body-emphasis"><%= book.title %></h3>
                  <p><%= book.description%></p>
                  <div class="row">
                    <div class="col">
                      <form action="/edit/<%= book.id%>" method="get">
                        <button type="submit" class="btn btn-outline-secondary rounded-circle p-2 lh-1">
                          <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-pencil" viewBox="0 0 16 16">
                            <path d="M12.146.146a.5.5 0 0 1 .708 0l3 3a.5.5 0 0 1 0 .708l-10 10a.5.5 0 0 1-.168.11l-5 2a.5.5 0 0 1-.65-.65l2-5a.5.5 0 0 1 .11-.168l10-10zM11.207 2.5 13.5 4.793 14.793 3.5 12.5 1.207zm1.586 3L10.5 3.207 4 9.707V10h.5a.5.5 0 0 1 .5.5v.5h.5a.5.5 0 0 1 .5.5v.5h.293zm-9.761 5.175-.106.106-1.528 3.821 3.821-1.528.106-.106A.5.5 0 0 1 5 12.5V12h-.5a.5.5 0 0 1-.5-.5V11h-.5a.5.5 0 0 1-.468-.325z"/>
                          </svg>                      
                          <span class="visually-hidden">Atualizar</span> 
                        </button>
                      </form>
                    </div>
                    <div class="col">
                      <form action="/delete/<%= book.id%>" method="get">
                        <button class="btn btn-outline-secondary rounded-circle p-2 lh-1" type="submit">
                          <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-trash" viewBox="0 0 16 16">
                            <path d="M5.5 5.5A.5.5 0 0 1 6 6v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5Zm2.5 0a.5.5 0 0 1 .5.5v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5Zm3 .5a.5.5 0 0 0-1 0v6a.5.5 0 0 0 1 0V6Z"/>
                            <path d="M14.5 3a1 1 0 0 1-1 1H13v9a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V4h-.5a1 1 0 0 1-1-1V2a1 1 0 0 1 1-1H6a1 1 0 0 1 1-1h2a1 1 0 0 1 1 1h3.5a1 1 0 0 1 1 1v1ZM4.118 4 4 4.059V13a1 1 0 0 0 1 1h6a1 1 0 0 0 1-1V4.059L11.882 4H4.118ZM2.5 3h11V2h-11v1Z"/>
                          </svg>
                          <span class="visually-hidden">Remover</span>
                        </button>
                      </form>
                    </div>
                  </div>
                </div>
              </div>
            <%}%>
          <%} else if (locals.error) {%>
            <div>
              <h2><%= error%></h2>
            </div>
          <%}%>
        </div>
      </div>
    </div>
<%- include("footer.ejs")%>